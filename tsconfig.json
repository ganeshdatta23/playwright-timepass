{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "tests/**/*.ts",
        "playwright.config.ts",
        "inspect-site.ts"
    ]
}